<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lamorena.Fragments.Offers">
    <!--    <ScrollView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content">-->

    <!--        <LinearLayout-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content">-->


    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:clickable="true"
        android:checkable="true"
        android:focusable="true"
        android:elevation="10dp"
        app:shapeAppearance="@style/MediumComponent"
        android:minHeight="100dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:strokeWidth="5dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:text="LA MORENA"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="70dp"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:text="Numero:"/>
                <TextView
                    android:id="@+id/numberinp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:text="+573185551162"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/correon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="70dp"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:text="Correo"/>
                <TextView
                    android:id="@+id/correoinp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:text="lamorena@gmail.com"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="70dp"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:text="website:"/>
                <TextView
                    android:id="@+id/webinp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:text="www.lamorena.com"/>
            </LinearLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageHeader"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/taller_morena" />



    <!--        </LinearLayout>-->

    <!--    </ScrollView>-->

</RelativeLayout>